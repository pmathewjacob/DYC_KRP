<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.app.dyc.krp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.android.app.dyc.krp.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity android:name="com.android.app.dyc.krp.NewPostActivity" />
        <activity android:name="com.android.app.dyc.krp.SignUpActivity" android:parentActivityName="com.android.app.dyc.krp.MainActivity"/>
        <activity android:name="com.android.app.dyc.krp.PostDetailActivity" />
        <activity android:name="com.android.app.dyc.krp.PhoneAuthActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.android.app.dyc.krp.RegisterUserDetailActivity"
            android:label="User Details"
            android:theme="@style/AppTheme"/>
        <activity android:name=".NewPublicPostActivity" />
    </application>

</manifest>
