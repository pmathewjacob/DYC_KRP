<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mtc.app.dyc.krp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!--
             The API key for Google Maps-based APIs.
        -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
        <activity
            android:name="com.mtc.app.dyc.krp.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />
        <activity
            android:name="com.mtc.app.dyc.krp.NewPostActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.mtc.app.dyc.krp.SignUpActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.mtc.app.dyc.krp.MainActivity"/>
        <activity
            android:name="com.mtc.app.dyc.krp.InfoActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.mtc.app.dyc.krp.MainActivity" />
        <activity
            android:name="com.mtc.app.dyc.krp.PostDetailActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.mtc.app.dyc.krp.MainActivity"/>
        <activity
            android:name="com.mtc.app.dyc.krp.PhoneAuthActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mtc.app.dyc.krp.RegisterUserDetailActivity"
            android:screenOrientation="portrait"
            android:label="User Details"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".NewPublicPostActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ComingSoonActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AdminActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".ScheduleActivity" />
    </application>

</manifest>
